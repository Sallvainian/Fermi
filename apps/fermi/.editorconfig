# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# See https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Dart files
[*.dart]
indent_size = 2
max_line_length = 80

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Gradle files
[*.gradle]
indent_size = 4

# Kotlin files
[*.{kt,kts}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# PowerShell scripts
[*.{ps1,psm1,psd1}]
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Web files
[*.{html,css,scss,js,ts}]
indent_size = 2

# Swift files
[*.swift]
indent_size = 4

# Objective-C files
[*.{h,m,mm}]
indent_size = 4

# C/C++ files
[*.{c,cc,cpp,h,hpp}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Ruby files
[*.{rb,rake}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Git files
[.git*]
indent_size = 2