{
  "name": "fermi-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Fermi education platform and documentation",
  "workspaces": [
    "apps/fermi",
    "apps/docs"
  ],
  "scripts": {
    "dev:fermi": "cd apps/fermi && flutter run -d chrome",
    "dev:docs": "cd apps/docs && mintlify dev",
    "build:fermi": "cd apps/fermi && flutter build web",
    "build:docs": "cd apps/docs && mintlify build",
    "test:fermi": "cd apps/fermi && flutter test",
    "analyze:fermi": "cd apps/fermi && flutter analyze",
    "clean": "cd apps/fermi && flutter clean"
  },
  "devDependencies": {
    "mintlify": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}