{
  "format": "dsl",
  "include": [
    "lib/**/*.dart",
    "functions/src/**/*.ts",
    "firestore.rules",
    "firestore.indexes.json"
  ],
  "exclude": [
    "**/*.g.dart",
    "**/*.freezed.dart",
    "build/**",
    ".dart_tool/**",
    "functions/lib/**",
    "**/*.generated.dart",
    "test/**",
    "integration_test/**",
    "windows/**",
    "android/**",
    "ios/**",
    "web/**",
    "macos/**"
  ],
  "tokenBudget": 4000,
  "features": {
    "dependencies": true,
    "imports": true,
    "exports": false,
    "lineNumbers": false
  },
  "performance": {
    "cachePatterns": true,
    "incrementalUpdates": true
  }
}